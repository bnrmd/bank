<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ucalgary.gui.budget.BudgetController">
   <children>
      <AnchorPane fx:id="expensePane" layoutX="-5.0" layoutY="-6.0" prefHeight="403.0" prefWidth="346.0">
         <children>
            <Label layoutX="25.0" layoutY="30.0" prefHeight="40.0" prefWidth="138.0" text="Enter Expense Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" layoutX="25.0" layoutY="70.0" promptText="ex: Rent" />
            <Label layoutX="25.0" layoutY="113.0" prefHeight="18.0" prefWidth="129.0" text="Enter Expense Cost">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="costField" layoutX="25.0" layoutY="146.0" promptText="ex: 600.00" />
            <Button fx:id="addExpenseButton" layoutX="90.0" layoutY="208.0" mnemonicParsing="false" onAction="#addExpenseToBudget" text="Add" />
            <Button fx:id="cancelAddExpenseButton" layoutX="174.0" layoutY="208.0" mnemonicParsing="false" onAction="#returnToMenuFromExpense" text="Cancel" />
            <Label fx:id="expenseErrorLabel" layoutX="11.0" layoutY="286.0" prefHeight="18.0" prefWidth="333.0" textFill="RED" />
            <Label fx:id="expenseSuccessLabel" layoutX="39.0" layoutY="269.0" prefHeight="18.0" prefWidth="198.0" textFill="#00ff15" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
